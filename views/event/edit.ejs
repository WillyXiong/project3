<%- include('../partials/header.ejs')%>
    <div class="content">

        <form method="POST" action="/events/<%= event.id%>?_method=PUT" class="new-form" enctype="multipart/form-data">
            <label for="category">Category</label>
            <select id="category" name="category" required>
                <option value="" disabled selected>Please Select a Category </option>
                <option value="Food Truck">Food Truck</option>
                <option value="Activities">Activities</option>
                <option value="Meat and Greet">Meat and Greet</option>
                <option value="Competitions">Competitions</option>
                <option value="Miscellaneous">Miscellaneous</option>
            </select>

            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= event.title%>">

            <label for="hostName">Host</label>
            <input type="text" id="hostName" name="hostName" value="<%= event.hostName%>">

            <label for="location">Location</label>
            <input type="text" id="location" name="location" value="<%= event.location%>">

            <label for="startDateTime">Start Date</label>
            <input type="datetime-local" id="startDateTime" name="startDateTime" value="<%= event.startDateTime%>"
                required>

            <label for="endDateTime">End Date</label>
            <input type="datetime-local" id="endDateTime" name="endDateTime" value="<%= event.endDateTime %>" required>


            <label for="details">Details</label>
            <textarea id="details" name="details" rows="5" required><%= event.details%></textarea>

            <!-- Display the current image -->
            <img src="<%= event.image %>" alt="Current Event Image" id="currentImage">
            <input type="file" id="image" name="image">



            <input type="submit" value="Submit" id="edit-submit">
        </form>
    </div>
    <%- include('../partials/footer.ejs')%>